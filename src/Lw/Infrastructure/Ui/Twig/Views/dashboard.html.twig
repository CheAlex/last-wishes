{% extends 'layout.html.twig' %}

{% block content %}
    <!--<h1 class="cover-heading">Dashboard</h1>-->
    <p class="lead">If something would happen to me...</p>

    <p class="lead">...with AngularJS...</p>
    <div ng-controller="StoryController">
        <div class="row wish-row" ng-repeat="wish in wishes">
            <div class="col-xs-1">
                <img class="wish-image" src="components/flat-ui/images/icons/svg/mail.svg" alt="Send email to...">
            </div>

            <div class="col-xs-9">
                ...send an <strong>email</strong><br/>
                to <input ng-model="wish.email" ng-blur="updateWish(wish)" class="form-control wish-control" type="text" maxlength="255" value="{[{ wish.email }]}"/><br/>
                with message
                <textarea ng-model="wish.content" class="form-control wish-control">{[{ wish.content }]}</textarea>
            </div>
            <div class="col-xs-2 right">
                <button ng-click="deleteWish(wish)" class="btn btn-primary btn-block btn-danger"><span class="fui-trash">Delete</span></button>
            </div>
        </div>
        <button ng-click="addWish()" class="btn btn-primary btn-block">New wish</button>
    </div>

    <p class="lead">...with PHP...</p>
    {% for wish in wishes %}
        <div class="row wish-row">
            <div class="col-xs-1">
                <img class="wish-image" src="components/flat-ui/images/icons/svg/mail.svg" alt="Send email to...">
            </div>

            <div class="col-xs-9">
                ...send an <strong>email</strong><br/>
                to <input name="email" class="form-control flat wish-control" type="text" maxlength="255" value="{{ wish.email() }}"/><br/>
                with message <strong>{{ wish.content() }}</strong>
            </div>
            <div class="col-xs-2 right">
                <a class="btn btn-primary btn-block" href="/story/{{ wish.id }}"><span class="fui-trash">Edit</span></a>
                <a class="btn btn-primary btn-block btn-danger" href="{{ path('delete-wish', {wishId: wish.id}) }}"><span class="fui-trash">Delete</span></a>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-xs-12">
                ...do nothing, a bit sad.
            </div>
        </div>
    {% endfor %}

    <br/>
    <p class="lead">You have N more wishes, so add a new one...</p>
    <div class="row">
        <div class="col-xs-12">
            {% include "wish-form.html.twig" %}
        </div>
    </div>
{% endblock %}
